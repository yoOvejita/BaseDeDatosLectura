
<h3>Lista de productos</h3>
<table>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Estado</th>
        <th>SUb-total</th>
    </tr>
    @foreach (var producto in ViewBag.productos ) {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Nombre</td>
            <td>@producto.Precio</td>
            <td>@producto.Cantidad</td>
            <td>@producto.Estado</td>
            <td>@(producto.Precio * producto.Cantidad)</td>
        </tr>
    }
</table>